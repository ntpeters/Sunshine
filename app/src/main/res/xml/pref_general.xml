<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_name"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:key="@string/pref_temp_key"
        android:title="@string/pref_temp_name"
        android:defaultValue="@string/pref_temp_default"
        android:entryValues="@array/pref_temp_unit_values"
        android:entries="@array/pref_temp_units" />

</PreferenceScreen>
